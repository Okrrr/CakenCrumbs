<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard | Cake n Crumbs</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/admin.css">
  <link rel="stylesheet" href="/main.css">
</head>
<body>
  <%- include("_adminHeader.ejs") %>

  <main class="dashboard">
    <div class="container">
      <h2>Welcome Back, Admin ðŸ‘‹</h2>
      <p class="subtitle">Here's what's happening at Cake n Crumbs today.</p>

      <section class="dashboard-cards">
        <div class="card">
          <i class="fas fa-shopping-bag"></i>
          <h3>Total Orders</h3>
          <p><%= totalOrders %></p>
        </div>
        <div class="card">
          <i class="fas fa-dollar-sign"></i>
          <h3>Total Sales</h3>
          <p>Ksh <%= totalSales ? totalSales.toFixed(2) : '0.00' %></p>
        </div>
        <div class="card">
          <i class="fas fa-users"></i>
          <h3>Customers</h3>
          <p><%= totalCustomers %></p>
        </div>
        <div class="card">
          <i class="fas fa-birthday-cake"></i>
          <h3>Products</h3>
          <p><%= totalProducts %></p>
        </div>
      </section>

      <section class="recent-orders">
        <h3>Recent Orders</h3>
        <% if (recentOrders && recentOrders.length > 0) { %>
          <table>
            <thead>
              <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Total</th>
                <th>Status</th>
                <th>Date</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% recentOrders.forEach(order => { %>
                <tr>
                  <td>#<%= String(order.id).padStart(5, '0') %></td>
                  <td><%= order.customer_name %></td>
                  <td>Ksh <%= order.total_price.toFixed(2) %></td>
                  <td>
                    <span class="status <%= order.status %>">
                      <%= order.status ? order.status.charAt(0).toUpperCase() + order.status.slice(1) : 'Unknown' %>
                    </span>
                  </td>
                  <td>
                    <%= new Date(order.order_date).toLocaleDateString('en-KE', { 
                      month: 'short', 
                      day: 'numeric', 
                      year: 'numeric' 
                    }) %>
                  </td>
                  <td>
                    <a href="/admin/orders/<%= order.id %>" class="btn-view">View</a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
          <p class="no-data">No orders yet. Orders will appear here once customers start ordering.</p>
        <% } %>
      </section>
    </div>
  </main>

  <%- include("_adminFooter.ejs") %>
</body>
</html>