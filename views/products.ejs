<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Products | Cake N Crumbs</title>
  <link rel="stylesheet" href="/products.css">
  
  </style>
</head>
<body>

  <!-- Header -->
  <header>
    <h1>Cake N Crumbs <span class="cart-count" id="cart-count">0</span></h1>
  </header>

  <!-- Filter Buttons -->
  <div class="filter-buttons">
    <button class="filter-btn active" data-category="all">All</button>
    <button class="filter-btn" data-category="bread">Bread</button>
    <button class="filter-btn" data-category="cakes">Cakes</button>
    <button class="filter-btn" data-category="pastries">Pastries</button>
    <button class="filter-btn" data-category="cookies">Cookies</button>
  </div>

  <!-- Products & Cart -->
  <div class="products-container">
    <!-- Products Grid -->
    <div id="products-grid">
      <% products.forEach(product => { %>
        <div class="product-card">
          <div class="product-img" style="background-image: url('<%= product.image %>')"></div>
          <div class="product-info">
            <h3 class="product-title"><%= product.name %></h3>
            <p class="product-desc"><%= product.description %></p>
            <p class="product-price">Ksh <%= product.price.toFixed(2) %></p>
            <button class="add-to-cart" data-id="<%= product.id %>">Add to Cart</button>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- Cart Sidebar -->
    <div class="cart-sidebar">
      <h2>Shopping Cart</h2>
      <div id="cart-items">
        <p class="empty-cart-message">Your cart is empty. Add some delicious items!</p>
      </div>
      <div class="cart-totals">
        <div><span>Subtotal:</span><span id="subtotal">Ksh 0.00</span></div>
        <div><span>Tax (8%):</span><span id="tax">Ksh 0.00</span></div>
        <div id="delivery-fee-line" style="display:none;"><span>Delivery Fee:</span><span id="delivery-fee">Ksh 3.99</span></div>
        <div><strong>Total:</strong><strong id="total">Ksh 0.00</strong></div>
      </div>
      <button id="checkout-btn" class="checkout-btn">Checkout</button>
    </div>
  </div>

  <!-- Footer -->
  <footer>
    <p>&copy; <%= new Date().getFullYear() %> Cake N Crumbs. All rights reserved.</p>
  </footer>

  <script src="/order.js"></script>
</body>
</html>
